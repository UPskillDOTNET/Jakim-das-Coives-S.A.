@model IEnumerable<APP_FrontEnd.Models.TransacaoDTO>

@{
    ViewData["Title"] = "Transações";
}

<h1>As Suas Transações</h1>
<br />
<table class="table">
    <thead>
        <tr class="table__heading">
            <th class="table__heading">
                @Html.DisplayNameFor(model => model.DataHora)
            </th>
            <th class="table__heading">
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th class="table__heading">
                @Html.DisplayNameFor(model => model.Metodo)
            </th>
            <th class="table__heading">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table__row">
            <td class="table__content" data-heading="@Html.DisplayNameFor(model => model.DataHora)">
                @Html.DisplayFor(modelItem => item.DataHora)
            </td>
            <td class="table__content" data-heading="@Html.DisplayNameFor(model => model.Tipo)">
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td class="table__content" data-heading="@Html.DisplayNameFor(model => model.Metodo)">
                @Html.DisplayFor(modelItem => item.Metodo)
            </td>
            <td class="table__content" style="text-align:right" data-heading="@Html.DisplayNameFor(model => model.Valor)">
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
        </tr>
}
    </tbody>
</table>
