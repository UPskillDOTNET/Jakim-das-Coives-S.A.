@model IEnumerable<APP_FrontEnd.Models.DetalheReservaDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>As Suas Reservas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Número de Reserva - Parque
            </th>
            <th>
                Parque
            </th>
            <th>
                Data de Início
            </th>
            <th>
                Data de Fim
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservaParqueId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeParque)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fim)
                </td>
                <td>
                    @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ReservaId })
                    @Html.ActionLink("Cancelar", "Cancelar", new { id = item.ReservaId })
                </td>
            </tr>
        }
    </tbody>
</table>
