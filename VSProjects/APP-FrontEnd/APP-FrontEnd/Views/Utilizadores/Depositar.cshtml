@model APP_FrontEnd.Models.DepositarDTO

@{
    ViewData["Title"] = "Depositar";
}

<h1>Depositar</h1>

<hr />

<p>Introduza o valor que pretende depositar.
<br />
 O mesmo será retirado do seu método de pagamento preferencial.</p>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Depositar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label">Valor (€)</label>
                <input asp-for="Valor" class="form-control" style="width:208px" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input id="pesquisa" type="submit" value="Depositar" class="btn btn-primary" style="width:208px" onclick="loading();" />
            </div>
        </form>
    </div>
</div>
<br />
<br />
<br />
<div>
    <a class="text-light" style="font-size:1.2rem" asp-action="Saldo" onclick="loading();">Voltar a Saldo na Sua Carteira</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

