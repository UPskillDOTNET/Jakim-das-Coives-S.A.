@page
@model SetPasswordModel
@{
    ViewData["Title"] = "Adicionar palavra-passe";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h4>Adicione a sua palavra-passe</h4>
<partial name="_StatusMessage" for="StatusMessage" />
<p class="texto-informativo">
    Não possui um utilizador local ou palavra-passe para este site.
    Registe uma conta local para que consiga iniciar sessão sem recorrer a autenticações externas.
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post" onsubmit="loadingjakim();">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Adicionar palavra-passe</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}